<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtQuestions"
        android:layout_width="338dp"
        android:layout_height="78dp"
        android:layout_marginTop="236dp"
        android:textAlignment="center"
        android:textColor="#278E83"
        android:textSize="33sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/odd"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="84dp"
        android:background="#1E8E82"
        android:text="ODD"
        android:textColor="#C2D9DC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/even"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/even"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginTop="348dp"
        android:background="#1E8E82"
        android:text="EVEN"
        android:textColor="#C2D9DC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Nextbtn"
        android:layout_width="167dp"
        android:layout_height="57dp"
        android:layout_marginTop="524dp"
        android:text="Next Question"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:text="Score: 0"
        android:textAlignment="center"
        android:textColor="#278E83"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textQNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textQNo"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"
        android:textColor="#278E83"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textAns"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#278E83"
        android:textSize="35sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/Nextbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>